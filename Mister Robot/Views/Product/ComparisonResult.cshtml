@{
	ViewData["Title"] = "Product Comparison";
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Product Comparison</title>
	<link rel="icon" type="image/png" href=" @Url.Content("~/assets/mr_robot_logo.webp")" />
	<link rel="stylesheet" href="@Url.Content("~/css/comparisonProducts.css")" />
	<link rel="stylesheet" href="@Url.Content("~/css/navbar.css")" />
</head>
<body class="background-image">

	<header class="header-nav">
		<a href="@Url.Action("Index", "Home")" class="logo">
			<img src="@Url.Content("~/assets/mr_robot_logo.webp")" alt="Mr. Robot Logo" />
		</a>

		<nav class="navbar">
			<a href="@Url.Action("Index", "Home")" class="nav-link">
				<i class="nav-icon">
					<img src="@Url.Content("~/assets/boxicons/bx-home-heart.svg")" alt="home icon" />
				</i>
				Home
			</a>

			<a href="@Url.Action("Index", "Inventory")" class="nav-link">
				<i class="nav-icon">
					<img src="@Url.Content("~/assets/boxicons/bx-box.svg")" alt="inventory icon" />
				</i>
				Inventory
			</a>

			<a href="@Url.Action("Index", "Cart")" class="nav-link">
				<i class="nav-icon">
					<img src="@Url.Content("~/assets/boxicons/cart-regular-24.svg")" alt="cart icon" />
					@* <span class="cart-badge">3</span> *@
				</i>
				Cart
			</a>

			<a href="@Url.Action("Index", "Wishlist")" class="nav-link active">
				<i class="nav-icon">
					<img src="@Url.Content("~/assets/boxicons/bx-heart-circle.svg")" alt="wishlist icon" />
				</i>
				Wishlist
			</a>
			<a href="@Url.Action("Index", "Order")" class="nav-link active">
				<i class="nav-icon">
					<img src="@Url.Content("~/assets/boxicons/bx-doughnut-chart.svg")" alt="order icon" />
				</i>
				Orders
			</a>



			<a href="@Url.Page("/Account/Manage/Index", new { area = "Identity" })" class="nav-link">
				<i class="nav-icon">
					<img src="@Url.Content("~/assets/boxicons/bx-cog.svg")" alt="settings icon" />
				</i>
				Settings
			</a>


		</nav>
		<partial name="_LoginPartial" />
	</header>

	<div class="container">
		<h1 class="main-title">Compare Products</h1>

		<!-- Product Comparison Section -->
		<div class="product-comparison">
			<!-- Product 1 Card -->
			<div class="product-card">
				<img src="data:image/png;base64,@(Convert.ToBase64String(ViewBag.Product1.Image))" alt="@ViewBag.Product1.Name" class="product-image" />
				<h3 class="product-title">@ViewBag.Product1.Name</h3>
				<p><strong>Brand:</strong> @ViewBag.Product1.Brand</p>
				<p><strong>Price:</strong> $@ViewBag.Product1.Price</p>
			</div>

			<!-- Product 2 Card -->
			<div class="product-card">
				<img src="data:image/png;base64,@(Convert.ToBase64String(ViewBag.Product2.Image))" alt="@ViewBag.Product2.Name" class="product-image" />
				<h3 class="product-title">@ViewBag.Product2.Name</h3>
				<p><strong>Brand:</strong> @ViewBag.Product2.Brand</p>
				<p><strong>Price:</strong> $@ViewBag.Product2.Price</p>
			</div>
		</div>

		<!-- Features Comparison Table -->
		<table class="comparison-table">
			<thead>
				<tr>
					<th>Feature</th>
					<th>@ViewBag.Product1.Name</th>
					<th>@ViewBag.Product2.Name</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in ViewBag.ComparisonResult)
				{
					<tr>
						<td class="feature-name">@item.FeatureName</td>
						<td class="feature-value">@item.Product1Value</td>
						<td class="feature-value">@item.Product2Value</td>
					</tr>
				}
			</tbody>
		</table>

		<!-- Back Button -->
		<div class="button-group">
			<a href="@Url.Action("Index", "Inventory")" class="btn-primary">Back to Inventory</a>
		</div>
	</div>
</body>
</html>
